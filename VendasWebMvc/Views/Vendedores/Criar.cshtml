@model VendasWebMvc.Models.ViewModels.FormVendedorViewModel;
@{
    ViewData["Title"] = "Criar vendedor";
}

<h1>@ViewData["Title"]</h1>

<h4>Vendedor</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label">Nome completo</label>
                <input asp-for="Vendedor.Nome" class="form-control border-dark" type="text" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label">E-mail</label>
                <input asp-for="Vendedor.Email" class="form-control border-dark" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group"> 
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Salario" class="control-label">Salário</label>
                <input asp-for="Vendedor.Salario" class="form-control border-dark" />
                <span asp-validation-for="Vendedor.Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataNascimento" class="control-label">Data de nascimento</label>
                <input asp-for="Vendedor.DataNascimento" class="form-control border-dark" />
                <span asp-validation-for="Vendedor.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label">Departamento</label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,
                    "Id","Nome"))" class="form-control border-dark"></select>
                <span asp-validation-for="Vendedor.DepartamentoId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

